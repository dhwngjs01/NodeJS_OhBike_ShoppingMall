doctype html
html
	head
		include adminHead.pug
	body#page-top
		include adminHeader.pug
		#wrapper
			include adminSideBar.pug
			
			#content-wrapper
				.container-fluid
					// Breadcrumbs
					ol.breadcrumb
						li.breadcrumb-item
							a(href='/admin/dashboard') 관리자 페이지
						li.breadcrumb-item.active 회원목록

					// DataTables Example
					.card.mb-3
						.card-header
							i.fas.fa-fw.fa-users
							|  회원정보
						.card-body
							.table-responsive
								table.table.table-sm.table-bordered(width='100%', cellspacing='0')
									thead
										tr
											th 회원 번호
											th 아이디
											th 이름
											th 휴대폰 번호
											th 우편번호
											th 주소
											th 상세주소
											th 가입 날짜
									tfoot
										tr
											th 회원 번호
											th 아이디
											th 이름
											th 휴대폰 번호
											th 우편번호
											th 주소
											th 상세주소
											th 가입 날짜
									tbody
										each user in user_list
											tr
												td.text-center #{user.user_no}
												td #{user.user_id}
												td #{user.user_name}
												td #{user.user_phone}
												td.text-right #{user.user_zipcode}
												td #{user.user_address}
												td #{user.user_detail_address}
												td #{user.user_date.format("yyyy년 MM월 dd일 HH시 mm분")}
										
						.card-footer.small.text-muted 마지막으로 회원이 가입한 날짜 : #{last_user_signup_date.format("yyyy년 MM월 dd일 HH시 mm분")}

				include adminFooter.pug
			// /.content-wrapper
			// /#wrapper
			// Scroll to Top Button
			a.scroll-to-top.rounded(href='#page-top')
				i.fas.fa-angle-up
			
		include adminScript.pug
		script.
			$(document).ready(function(){
				$('.table').DataTable();
			});
