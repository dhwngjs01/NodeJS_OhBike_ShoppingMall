script.
	$(function(){
		menuHighlight();
	});

	function menuHighlight(){
		currentMenu = $.trim($("li.breadcrumb-item.active").text());
		
		$("ul.sidebar.navbar-nav li").removeClass("active");

		$("ul.sidebar.navbar-nav li").each(function(key, el){
			menuText = $.trim($(el).text());

			if(currentMenu == menuText){
				$(el).addClass("active");
			}
		});
	}